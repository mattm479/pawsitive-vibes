<section class="section feed-page">
  <div class="container">
    <button class="button is-primary" id="create-post-button">Create a Post</button>
    <div class="box">
      <h2 class="title is-4">Feed</h2>
      <div class="posts-container">
        {{#each posts}}
        <div class="post box">
          <figure class="image is-4by3">
            <img src="{{this.imageUrl}}" alt="Post Image">
          </figure>
          <p>{{this.description}}</p>
          <small>Posted by: <a href="/profile?user={{this.userId}}">{{this.userName}}</a> on <span>{{this.date}}</span></small>
        </div>
        {{/each}}
      </div>
      <nav class="pagination is-centered" role="navigation" aria-label="pagination">
        <a class="pagination-previous">Previous</a>
        <a class="pagination-next">Next</a>
        <ul class="pagination-list">
          <li><a class="pagination-link">1</a></li>
          <li><a class="pagination-link">2</a></li>
          <li><a class="pagination-link">3</a></li>
        </ul>
      </nav>
    </div>
  </div>
</section>

<!-- Post Creation Modal -->
<div id="post-modal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Create a Post</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <form id="post-form">
        <div class="field">
          <div class="control">
            <textarea class="textarea" id="post-content" placeholder="What's on your mind?" required></textarea>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" type="file" id="post-media">
          </div>
        </div>
      </form>
    </section>
    <footer class="modal-card-foot">
      <button class="button is-primary" type="submit" form="post-form">Post</button>
      <button class="button" id="cancel-button">Cancel</button>
    </footer>
  </div>
</div>

<script src="/js/feed.js"></script>
