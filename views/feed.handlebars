{{> navbar this }}
<section class="section feed-page">
    <div class="container">
        <div class="box">
          <div class="top-left">
            <button class="button is-primary" id="create-post-button">Create a Post</button>
          </div>
            <div class="posts-container">
              {{#each posts}}
                {{> post }}
              {{/each}}
            </div>
        </div>
    </div>
</section>

<!-- Post Creation Modal -->
<div id="post-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Create a Post</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <form id="post-form" action="/api/posts" method="post" enctype="multipart/form-data">
                <div class="field">
                    <div class="control">
                        <textarea class="textarea" id="post-content" name="post-content" placeholder="What's on your mind?" required></textarea>
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <input class="input" type="file" id="post-media" name="post-media">
                    </div>
                </div>
              <fieldset>
                <legend>Choose your category</legend>
                <div>
                  <input type="radio" id="cats" name="interests" value="Cats">
                  <label for="cats">Cats</label>
                </div>
                <div>
                  <input type="radio" id="dogs" name="interests" value="Dogs">
                  <label for="dogs">Dogs</label>
                </div>
                <div>
                  <input type="radio" id="reptiles" name="interests" value="Reptiles">
                  <label for="reptiles">Reptiles</label>
                </div>
              </fieldset>
              <br/>
              <button class="button is-primary" type="submit">Post</button>
            </form>
        </section>
    </div>
</div>

<script src="js/feed.js"></script>
